@page "{id:int}"
@model DemoApp.Pages.Todos.EditModel
@{
    ViewData["Title"] = "Edit Todo";
}

<h1>Edit Todo</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Todo.Id" />
            <div class="form-group mb-3">
                <label asp-for="Todo.Title" class="control-label"></label>
                <input asp-for="Todo.Title" class="form-control" />
                <span asp-validation-for="Todo.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Todo.Description" class="control-label"></label>
                <textarea asp-for="Todo.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Todo.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="Todo.IsComplete" class="form-check-input" />
                    <label asp-for="Todo.IsComplete" class="form-check-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}