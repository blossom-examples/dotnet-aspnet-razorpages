@page "{id:int}"
@model DemoApp.Pages.Todos.DeleteModel
@{
    ViewData["Title"] = "Delete Todo";
}

<h1>Delete Todo</h1>

<h3>Are you sure you want to delete this todo?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Todo.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Todo.Title)</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Todo.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Todo.Description)</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Todo.IsComplete)</dt>
        <dd class="col-sm-10">@(Model.Todo.IsComplete ? "Yes" : "No")</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Todo.CreatedAt)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Todo.CreatedAt)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Todo.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>